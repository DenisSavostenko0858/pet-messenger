<%
const userBirthYear = userAge;
const currentDate = new Date();
const userBirthDate = new Date(userBirthYear); 
const diffInMs = currentDate.getTime() - userBirthDate.getTime();
const ageDate = new Date(diffInMs);
const userBirth = Math.abs(ageDate.getUTCFullYear() - 1970);

const friends = userDate.friends;
const friendsArray = JSON.parse(friends);
const friendsArrayLength = friendsArray.length
%>
<div class="body-chat-header">
    <h3>Профиль :</h3>
</div>
<div class="body-chat-content">
    <div class="user-card-profile">
        <div class="profile-body">
            <div class="title-body-card-user">Ваши данные :</div>
            <div class="container-profile-content">
                <div class="profile-content">Имя: <%-userName-%></div>
            </div>
            <div class="container-profile-content">
                <div class="profile-content">Фамилия: <%= userDate.usersurname%></div>
            </div>
            <div class="container-profile-content">
                <div class="profile-content">Возраст: <%-userBirth-%> лет</div>
            </div>
            <div class="container-profile-content">
                <div class="profile-content">Телефон: <%= userDate.telephone%></div>
            </div>
            <div class="container-profile-content">
                <div class="profile-content">Почта: <%-userEmail-%></div>
            </div>
        </div>
        <div class="profile-body">
            <div class="title-body-card-user">О вас:</div>
            <div class="profile-about">
                <div class="container-profile-content">
                    <div class="profile-avatar"><img src="/images/resourse-for-user/avatar.png" alt="аватарка" class="avatar-user-img"></div>
                </div>
                <div class="container-profile-content">
                    <div class="profile-content-status">Статус: 
                        <% if(!userDate.about){ %>
                            Сдесь пока пусто...
                        <% } else { %>
                            <div class="status-user">
                                <%-userDate.about-%>
                            </div>
                        <% } %>
                    </div>
                </div>
            </div>
            <div class="container-profile-content">
                <div class="profile-content">Друзья:  <%= friendsArrayLength%></div>
            </div>
            <a href="" class="btn-add">Изменить данные</a>
        </div>
    </div>
</div>